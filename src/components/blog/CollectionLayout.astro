---
import BaseLayout from "@components/base/BaseLayout.astro";
import BlogCard from "@components/blog/Card.astro";
import Pagination from "@components/common/Pagination.astro";
import PageHeader from "@components/common/PageHeader.astro";
import BlogSidebar from "@components/blog/Sidebar.astro";
import type { BlogEntry } from "@/types";

interface Props {
  entryIndex: BlogEntry;
  entries: BlogEntry[];
  tags: string[];
  categories: string[];
  allCategories: string[];
  pageIndex: number;
  pageCount: number;
}

const {
  entryIndex,
  entries,
  tags,
  categories,
  allCategories,
  pageIndex,
  pageCount,
} = Astro.props;
---

<BaseLayout title={entryIndex.data.title} description={entryIndex.data.description}>
  <PageHeader title={entryIndex.data.title} />
  <section class="section">
    <div class="flex container">
      <div class="row px-0 mx-0 w-full">
      
        <!-- blog posts -->
        <div class="flex items-center gap-3 mb-8">
        <h1 class="text-3xl font-bold">{entryIndex.data.title}</h1>
        <a 
        href="/rss.xml" 
        class="feed-icon inline-flex items-center justify-center w-10 h-10 text-gray-500 hover:text-orange-500 dark:text-gray-400 dark:hover:text-orange-400 transition-colors"
        title="Sottoscrivi il RSS Feed del Blog"
        target="_blank">
        <img 
        src="/rss.png" 
        alt="RSS Feed" 
        width="20" 
        height="20"
        class="w-5 h-5"
        />
        </a>
    </div>

          <!-- Lista dei post del blog -->
          {
            entries.map((entry) => (
              <div class="mb-4">
                <BlogCard entry={entry} />
              </div>
            ))
          }
          <Pagination
            collection="blog"
            pageIndex={pageIndex}
            pageCount={pageCount}
          />
        </div>
        <!-- sidebar -->
        <div
          class="hidden lg:col-4 lg:flex max-h-static_sidemenu sticky p-0 pl-4 top-[4rem]"
        >
          <BlogSidebar
            tags={tags}
            categories={categories}
            allCategories={allCategories}
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.feed-icon {
  opacity: 0.7;
  transition: all 0.2s ease;
}

.feed-icon:hover {
  opacity: 1;
  transform: scale(1.1);
}

.feed-icon img {
  transition: filter 0.2s ease;
}

.feed-icon:hover img {
  filter: grayscale(0%);
}
</style>